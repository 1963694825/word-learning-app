/* pages/index/index.wxss */
.container {
  padding: 30rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 任务卡片 */
.task-card {
  margin-bottom: 30rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.task-count {
  font-size: 28rpx;
  color: #3b82f6;
}

.task-detail {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.task-item {
  font-size: 28rpx;
  color: #6b7280;
}

/* 快捷操作 */
.actions-card {
  margin-bottom: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border: none;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}
