/* pages/index/index.wxss */
.container {
  padding: 30rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
}

/* 词书选择 */
.books-card {
  margin-bottom: 30rpx;
}

.books-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.books-scroll {
  width: 100%;
  white-space: nowrap;
}

.books-list {
  display: inline-flex;
  gap: 20rpx;
  padding-bottom: 10rpx;
}

.book-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border-radius: 16rpx;
  min-width: 160rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.book-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  transform: scale(1.05);
}

.book-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.book-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  text-align: center;
}

.book-item.active .book-name {
  color: #ffffff;
}

.book-count {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.book-item.active .book-count {
  color: #e0e7ff;
}

.book-level {
  font-size: 22rpx;
  color: #9ca3af;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
}

.book-item.active .book-level {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

/* 词书学习统计 */
.book-stats-card {
  margin-bottom: 30rpx;
}

.book-stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.book-stats-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.book-stats-progress {
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

/* 统计网格 */
.book-stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.book-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.book-stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.book-stat-value.learned {
  color: #10b981;
}

.book-stat-value.unlearned {
  color: #f59e0b;
}

.book-stat-value.mastered {
  color: #8b5cf6;
}

.book-stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 任务卡片 */
.task-card {
  margin-bottom: 30rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.task-count {
  font-size: 28rpx;
  color: #3b82f6;
}

.task-detail {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.task-item {
  font-size: 28rpx;
  color: #6b7280;
}

/* 快捷操作 */
.actions-card {
  margin-bottom: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border: none;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}
