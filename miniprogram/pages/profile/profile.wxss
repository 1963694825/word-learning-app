/* pages/profile/profile.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 未登录状态 */
.login-prompt {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 100rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.login-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.login-text {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 10rpx;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 已登录状态 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid white;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

/* 学习统计卡片 */
.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 学习数据卡片 */
.data-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 10rpx;
}

.data-label {
  font-size: 24rpx;
  color: #6b7280;
}

.menu-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.menu-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #374151;
}

.arrow {
  font-size: 40rpx;
  color: #d1d5db;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  background: white;
  border: 2rpx solid #ef4444;
  border-radius: 16rpx;
  color: #ef4444;
  font-size: 32rpx;
}
