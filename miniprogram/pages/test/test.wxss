/* pages/test/test.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
}

/* 测试结果 */
.result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 50rpx;
}

.result-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.btn-back {
  width: 400rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 进度 */
.progress {
  text-align: center;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 30rpx;
}

/* 题目卡片 */
.question-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.word-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.word {
  font-size: 56rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 10rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #6b7280;
}

.question-text {
  font-size: 32rpx;
  color: #374151;
  text-align: center;
}

/* 选项 */
.options {
  margin-bottom: 40rpx;
}

.option-item {
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s;
}

.option-item.selected {
  border-color: #3b82f6;
  background: #eff6ff;
}

.option-label {
  width: 60rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  margin-right: 20rpx;
}

.option-item.selected .option-label {
  background: #3b82f6;
  color: white;
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: #374151;
}

/* 提交按钮 */
.btn-submit {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}
