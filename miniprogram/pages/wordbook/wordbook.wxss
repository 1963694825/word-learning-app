/* pages/wordbook/wordbook.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 50rpx;
}

.btn-create {
  width: 400rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.wordbook-list {
  margin-bottom: 30rpx;
}

.wordbook-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.wordbook-info {
  flex: 1;
}

.wordbook-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 10rpx;
}

.wordbook-count {
  font-size: 24rpx;
  color: #6b7280;
}

.arrow {
  font-size: 48rpx;
  color: #d1d5db;
}

.btn-add {
  width: 100%;
  height: 88rpx;
  background: white;
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  color: #6b7280;
  font-size: 32rpx;
}
