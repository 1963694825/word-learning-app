/* pages/stats/stats.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 日历头部 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.current-month {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

/* 星期标题 */
.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
  padding: 10rpx 0;
}

/* 日历格子 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  aspect-ratio: 1;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  position: relative;
  min-height: 80rpx;
}

.calendar-day.current-month {
  background: #e0e7ff;
}

.calendar-day.other-month {
  background: transparent;
}

.day-number {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.day-count {
  font-size: 18rpx;
  color: #667eea;
  margin-top: 4rpx;
  font-weight: 600;
}
